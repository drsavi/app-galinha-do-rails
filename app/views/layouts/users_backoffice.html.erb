<!DOCTYPE html>
<html>
  <head>
    <title>Metodologia Galinha - User</title>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= link_to "Logoff ->", destroy_user_session_path, method: :delete %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" >

    <%#= stylesheet_link_tag     params[:controller], media: 'all', 'data-turbolinks-track': 'reload' %>
    <%#= javascript_include_tag  params[:controller], 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
